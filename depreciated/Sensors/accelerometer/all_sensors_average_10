// Use digital pin 7 to read PW from the device. Pin number does not change in this code
const int pwPin = 7;

// Input Output Variables
const int proximityInput = 2;
const int LED = 13;

// Store calculated value
long pW, inches, cm, meters; 
// Sensor Variable
int sensorState;

int index = 0;
int averageX = 0;
int averageY = 0;
int averageZ = 0;
int numReadings = 10;
int averageYaw = 0;
int averagePitch = 0;
int averageRoll = 0;
int averageEulerX = 0;
int averageEulerY = 0;
int averageEulerZ = 0;
int averageQuaternionW = 0;
int averageQuaternionX = 0;
int averageQuaternionY = 0;
int averageQuaternionZ = 0;
int averageXWorld = 0;
int averageYWorld = 0;
int averageZWorld = 0;
int averageDistanceFrom = 0;
int values[14];
//Indexes of values array:
// 0: averageQuaternionW
// 1: averageQuaternionX
// 2: averageQuaternionY
// 3: averageQuaternionZ
// 4: averageEulerX
// 5: averageEulerY
// 6: averageEulerZ
// 7: averageYaw
// 8: averagePitch
// 9: averageRoll
// 10: averageAccelX
// 11: averageAccelY
// 12:  averageAccelZ


// I2C device class (I2Cdev) demonstration Arduino sketch for MPU6050 class using DMP (MotionApps v2.0)
// 6/21/2012 by Jeff Rowberg <jeff@rowberg.net>
// Updates should (hopefully) always be available at https://github.com/jrowberg/i2cdevlib
